{
  "extends": "@amnis/tsconfig-node",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "lib": ["ES2022"],
    "target": "es6",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "composite": true,
    "sourceMap": false,
    "strict": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "preserveSymlinks": true,
  },
  "include": [
    "./src/**/*.ts*"
  ]
}
