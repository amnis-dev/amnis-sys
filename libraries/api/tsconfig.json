{
  "extends": "@amnis/tsconfig-node",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "lib": ["DOM", "ES2022"],
    "target": "es6",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "declarationMap": true,
    "declaration": true,
    "paths": {
      "@amnis/api/set": ["./src/set/index.ts"],
      "@amnis/api/schema": ["./src/schema/index.ts"],
      "@amnis/api/process": ["./src/process/index.ts"],
    }
  },
  "include": [
    "./src/**/*.ts*"
  ]
}
