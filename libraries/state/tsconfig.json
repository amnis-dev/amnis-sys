{
  "extends": "@amnis/tsconfig-node",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "lib": ["DOM", "ES2022"],
    "target": "es6",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  "include": [
    "./src/**/*.ts*",
    "./src/schema/*.json"
  ]
}
