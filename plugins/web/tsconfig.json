{
  "extends": "@amnis/tsconfig-node",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "outDir": "./types",
    "declarationDir": "./types",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@amnis/web": ["./src/index.ts"],
      "@amnis/web/set": ["./src/set/index.ts"],
      "@amnis/web/schema": ["./src/schema/index.ts"],
      "@amnis/web/data": ["./src/data/index.ts"],
      "@amnis/web/data/test": ["./src/data/test/index.ts"],
      "@amnis/web/react": ["./src/react/index.ts"],
      "@amnis/web/react/hooks": ["./src/react/hooks/index.ts"],
      "@amnis/web/react/context": ["./src/react/context/index.ts"],
      "@amnis/web/react/material": ["./src/react/material/index.ts"],
      "@amnis/web/interface": ["./src/interface/index.ts"],
      "@amnis/web/manager": ["./src/manager/index.ts"],
      "@amnis/web/manager/locale/en": ["./src/manager/locale/en/index.ts"],
      "@amnis/web/manager/locale/de": ["./src/manager/locale/de/index.ts"],

      "@amnis/web/lib/react-router-dom": ["./src/lib/react-router-dom/index.ts"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "_references/**/*"
  ]
}