{
  "name": "@amnis/sys",
  "version": "0.0.0",
  "description": "TypeScript system for enterprise-level web and mobile projects.",
  "keywords": [
    "javascript",
    "typescript",
    "stateful",
    "system",
    "test",
    "mocking",
    "authentication",
    "authorization",
    "authn",
    "authz",
    "crypto",
    "crud",
    "rest",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:amnis-dev/amnis-system.git"
  },
  "files": [
    "types",
    "dist"
  ],
  "type": "module",
  "types": "./types/index.d.ts",
  "main": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./types/react/index.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "scripts": {
    "build:all": "pnpm build:libs && pnpm build",
    "build": "pnpm build:types && pnpm build:dist",
    "build:schema": "ts-node-esm -P ./scripts/tsconfig.json ./scripts/schema",
    "build:dist": "vite build --mode production",
    "build:types": "tsc -p tsconfig.build.json",
    "build:libs": "pnpm --filter '@amnis/*...' build",
    "lint": "tsc --noEmit && eslint --ignore-path .eslintignore.root --ext .ts --ext .tsx \"./\"",
    "lint:libs": "pnpm run --filter '@amnis/*' --if-present --parallel lint",
    "test": "vitest --run src/*",
    "test:file": "vitest --run",
    "test:libs": "pnpm run --filter=!@amnis/db-cosmos --filter '@amnis/*' --if-present --parallel test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "Eric Crowell",
  "license": "MIT",
  "resolutions": {
    "semver": "7.5.4"
  },
  "dependencies": {
    "@amnis/api": "workspace:^",
    "@amnis/mock": "workspace:^",
    "@amnis/state": "workspace:^"
  },
  "devDependencies": {
    "@amnis/eslint-config-node": "workspace:^",
    "@amnis/tsconfig-node": "workspace:^",
    "@amnis/web": "workspace:^",
    "@blueprintjs/core": "^5.2.0",
    "@reduxjs/toolkit": "https://github.com/amnis-dev/packages/raw/main/redux-toolkit-2.0.0-beta.0-patched.tgz",
    "@storybook/addon-essentials": "^7.1.1",
    "@storybook/addon-interactions": "^7.1.1",
    "@storybook/addon-links": "^7.1.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.1.1",
    "@storybook/manager-api": "^7.1.1",
    "@storybook/react": "^7.1.1",
    "@storybook/react-vite": "^7.1.1",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.1.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.0.3",
    "ajv": "^8.12.0",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "jsdom": "^22.1.0",
    "msw": "^1.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.1",
    "redux": "5.0.0-beta.0",
    "redux-thunk": "3.0.0-alpha.3",
    "reselect": "^4.1.8",
    "rimraf": "^5.0.1",
    "storybook": "^7.1.1",
    "supertest": "^6.3.3",
    "ts-json-schema-generator": "^1.2.0",
    "ts-node": "^10.9.1",
    "type-fest": "^4.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vitest": "^0.33.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
